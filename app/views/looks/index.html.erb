
<div class="container grid">
  <div id="grid-item-wrapper">
    <% @looks.each do |look| %>
      <div class="grid-item">
        <h4><%=look.title%></h4>
        <img src="<%=look.img%>" class="grid-img">
      </div>
    <% end %>
  </div>
</div>


<% @looks.each do |look| %>
  <tr>
    <td><%= look.title %></td>
    <td><%= pluralize(look.votes.count, "vote") %></td>
    <td><%= button_to '+1', upvote_look_path(look), method: :post %></td>
    <td><%= link_to 'Show', look %></td>
    <td><%= link_to 'Edit', edit_look_path(look) %></td>
    <td><%= link_to 'Destroy', look, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
